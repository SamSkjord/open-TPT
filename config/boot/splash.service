[Unit]
Description=openTPT Boot Splash
DefaultDependencies=no
After=systemd-tmpfiles-setup.service
Before=openTPT.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/fbi -T 1 -d /dev/fb0 --noverbose --autozoom /home/pi/open-TPT/assets/splash.png
ExecStop=/usr/bin/true
StandardInput=tty
StandardOutput=null
StandardError=null

[Install]
WantedBy=sysinit.target
